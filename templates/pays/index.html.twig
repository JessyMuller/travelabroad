{% extends 'base.html.twig' %}

{% block title %}Pays index
{% endblock %}

{% block body %}
	<h1>Liste des pays</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Introduction</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for pay in pays %}
				<tr>
					<td>{{ pay.id }}</td>
					<td>{{ pay.nom }}</td>
					<td>{{ pay.introduction }}</td>
					<td>{{ pay.description }}</td>
					<td>
						<a href="{{ path('app_pays_show', {'id': pay.id}) }}">show</a>
						<a href="{{ path('app_pays_edit', {'id': pay.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_pays_new') }}">Create new</a>
{% endblock %}
